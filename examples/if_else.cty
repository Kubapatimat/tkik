// examples/if_example.cty

let includeR1 = true;
let includeR2 = false;

// jeśli includeR1 == true, wstawimy R1
if (includeR1 == true) {
    print("Wstawiam R1");
    R R1 = 100 : N, GND;
}

// druga instrukcja if z else
if (includeR2 == true) {
    print("Wstawiam R2");
    R R2 = 200 : N, GND;
} else {
    // jeśli nie includeR2, wstawimy R3
    print("Wstawiam R3");
    R R3 = 300 : N, GND;
}

// kilka zagnieżdżonych ifów
let useSeries = false;
if (includeR1) {
    if (useSeries) {
        // ta gałąź nigdy się nie wykona, bo useSeries=false
        R R4 = 400 : N, GND;
    } else {
        // wykona się tylko ten resistor
        R R5 = 500 : N, GND;
    }
}

// na koniec źródło napięcia
V V1 = 10 : N, GND;
