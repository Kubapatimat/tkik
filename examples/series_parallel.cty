# RLC circuit with sinusoidal voltage source
# Series and parallel macro example

let freq = 50
let period = 1/freq
let stop = 10*period

let R = 1k, L = 1, C = 1m

V1 = sine(dc=0, amplitude=10, f=freq) : 1, 0

series : 1, 0 {
    R1 = R   # : R1.+ -> 1, R1.- -> L1.+
    L1 = L   # : L1.- -> C1.+
    C1 = C   # : C1.- -> R2.+
    parallel {
        R2 = 2k # : R2.+ -> R3.+
        R3 = 3k # : R3.- -> R3.-
    }           # : R2.- -> 0
}

transient(stop)